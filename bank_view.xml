<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action and Menu -->
    <record id="action_bank_details" model="ir.actions.act_window">
        <field name="name">Banks</field>
        <field name="res_model">bank.details</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_bank_details" name="Banks Management" parent="menu_custom_form" action="action_bank_details"/>

    <!-- Tree View Of Bank -->
    <record id="view_tree_bank_details" model="ir.ui.view">
        <field name="name">bank.details.tree</field>
        <field name="model">bank.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="branch_name"/>
                <field name="bank_type" widget="selection"/>
                <field name="ifsc_code"/>
                <field name="city"/>
                <field name="active" widget="boolean_button"/>
            </tree>
        </field>
    </record>

    <!-- Form View of Bank -->
    <record id="view_form_bank_details" model="ir.ui.view">
        <field name="name">bank.details.form</field>
        <field name="model">bank.details</field>
        <field name="arch" type="xml">
            <form string="Bank Details">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="branch_name"/>
                        <field name="branch_code"/>
                        <field name="ifsc_code"/>
                        <field name="bank_type" widget="selection"/>
                    </group>
                    <group>
                        <field name="address"/>
                        <field name="city"/>
                        <field name="state"/>
                        <field name="country"/>
                    </group>
                    <group>
                        <field name="phone"/>
<!--                        <field name="mobile"/>-->
                        <field name="email"/>
<!--                        <field name="contact_person"/>-->
                    </group>
                    <notebook>
                        <page string="Bank Accounts">
                            <field name="bank_accounts">
                                <tree editable="bottom">
                                    <field name="account_number"/>
                                    <field name="account_holder"/>
                                    <field name="account_type" widget="selection"/>
                                    <field name="status" widget="selection"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Bank Accounts -->
    <record id="action_bank_account" model="ir.actions.act_window">
        <field name="name">Bank Accounts</field>
        <field name="res_model">bank.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_bank_account" name="Bank Accounts" parent="menu_custom_form" action="action_bank_account"/>

    <!-- Tree View For Bank Accounts -->
    <record id="view_tree_bank_account" model="ir.ui.view">
        <field name="name">bank.account.tree</field>
        <field name="model">bank.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="account_number"/>
                <field name="account_holder"/>
                <field name="bank_id"/>
                <field name="account_type" widget="selection"/>
                <field name="status" widget="selection"/>
            </tree>
        </field>
    </record>

    <!-- Form View of Bank Accounts -->
    <record id="view_form_bank_account" model="ir.ui.view">
        <field name="name">bank.account.form</field>
        <field name="model">bank.account</field>
        <field name="arch" type="xml">
            <form string="Bank Account">
                <sheet>
                    <group>
                        <field name="bank_id"/>
                        <field name="object_head_id"/>
                        <field name="related_object_head_id" readonly="1"/>
                        <field name="account_number"/>
<!--                        <field name="account_number_selection" widget="selection"/>-->
                        <field name="account_holder"/>
<!--                        <field name="account_holder_selection" widget="selection"/>-->
                        <field name="account_type" widget="selection"/>
                    </group>
                    <group>
                        <field name="micr_code"/>
<!--                        <field name="micr_code_selection" widget="selection"/>-->
                        <field name="status" widget="selection"/>
                    </group>
                    <notebook>

                        <page string="Cheques">
                            <field name="cheques">
                                <tree editable="bottom">
                                    <field name="cheque_number"/>
                                    <field name="date_issued"/>
                                    <field name="amount"/>
                                    <field name="status" widget="selection"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Cheque Master -->
    <record id="action_cheque_master" model="ir.actions.act_window">
        <field name="name">Cheques</field>
        <field name="res_model">cheque.master</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cheque_master" name="Cheque Management" parent="menu_custom_form" action="action_cheque_master"/>

    <!-- Tree View For Cheques -->
    <record id="view_tree_cheque_master" model="ir.ui.view">
        <field name="name">cheque.master.tree</field>
        <field name="model">cheque.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="cheque_number"/>
                <field name="bank_account_id"/>
                <field name="date_issued"/>
                <field name="amount"/>
                <field name="status" widget="selection"/>
            </tree>
        </field>
    </record>

    <!-- Form View of Cheques -->
    <record id="view_form_cheque_master" model="ir.ui.view">
        <field name="name">cheque.master.form</field>
        <field name="model">cheque.master</field>
        <field name="arch" type="xml">
            <form string="Cheque Details">
                <sheet>
                    <group>
                        <field name="bank_account_id"/>
                        <field name="cheque_number"/>
                        <field name="date_issued"/>
                        <field name="amount"/>
                        <field name="beneficiary"/>
                    </group>
                    <group>
                        <field name="status" widget="selection"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>